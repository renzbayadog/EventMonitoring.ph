@using EventMonitoring.ph.Components.Layout.Navigationbar
@using EventMonitoring.ph.Components.Layout.Sidebar
@using Microsoft.AspNetCore.Components.Authorization
@inherits LayoutComponentBase

<BreezeMainLayoutTemplate>
    <InnerTemplate>
        <AuthorizeView>
            <SidebarTemplate>
                <SidebarBrandTemplate><Brand /></SidebarBrandTemplate>
                <SidebarContentTemplate><Content /></SidebarContentTemplate>
            </SidebarTemplate>
        </AuthorizeView>
        <NavbarTemplate Theme="@NavbarTheme.Dark()">
            <BodyTemplate>
                @Body
            </BodyTemplate>
            <NavItemEndTemplate>
                <NavItems />
            </NavItemEndTemplate>
            <NavOnMobileScreenLogoTemplate>
                <OnMobileScreenLogo />
            </NavOnMobileScreenLogoTemplate>
        </NavbarTemplate>
    </InnerTemplate>
</BreezeMainLayoutTemplate>